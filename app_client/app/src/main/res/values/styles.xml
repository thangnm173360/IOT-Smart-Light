<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseLoading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bgr_diaglog</item>
        <item name="android:indeterminateTint">?colorPrimary</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/dimen_xxxsmall</item>
    </style>

    <style name="LoadmoreIndicator">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminateTint">?attr/colorPrimary</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="SplashscreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bgr_splash_screen</item>
    </style>

    <!-- COMMON WIDGET -->
    <style name="Widget" />

    <style name="Widget.Clickable">
        <item name="android:foreground">@drawable/ripple_button</item>
    </style>

    <style name="Widget.Button" parent="Widget.AppCompat.Button">
        <item name="android:foreground">@drawable/ripple_button</item>
    </style>

    <style name="editTextCustomer">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorHintText</item>
        <item name="android:background">@drawable/bgr_round_border</item>
    </style>

    <style name="txtViewRoomInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_xxmedium</item>
    </style>

    <style name="txtRoomDetail">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_xxmedium</item>
    </style>
</resources>